{
  "manifest_version": 3,
  "name": "ClearLabel",
  "version": "1.0.0",
  "description": "Ethical brand scanner - identify and flag brands with ethical concerns",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ClearLabel - Ethical Brand Scanner"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["content-styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["brandList.json", "logo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}